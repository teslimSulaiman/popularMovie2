<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myPlayId"
        android:layout_weight="@integer/image_weight"
        android:src="@drawable/myplay"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="@integer/trailer_label_weight"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/trailer_label_font_size"
        android:id="@+id/trailerText"
        />
</LinearLayout>